<?xml version="1.0" encoding="UTF-8"?>
<!-- XML declaration: batata hai ki ye Moqui configuration file hai -->

<moqui-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/moqui-conf-3.xsd">
    <!--
        Ye Moqui ka CENTRAL CONFIGURATION file hai
        Ye decide karta hai:
        - Kaunsa screen kaha mount hoga
        - REST aur UI ka entry point kya hoga
    -->

    <screen-facade>
        <!--
            screen-facade = UI aur REST routing layer
            Yahi se Moqui ko pata chalta hai
            kaunsa screen kis URL pe available hoga
        -->

        <!-- ================= REST APIs ================= -->
        <screen location="component://webroot/screen/webroot/rest.xml">
            <!--
                Ye Moqui ka MASTER REST screen hai
                Default REST entry point:
                /rest/s1/*
            -->
            <subscreens-item
                    name="person"
                    location="component://party/service/party/Person.rest.xml"/>
            <!--
                Yaha party component ka REST file mount ho raha hai
                name="person" ka matlab:
                    REST path banega → /rest/s1/person/...
                Is file ke andar defined resources active ho jaate hain
            -->
        </screen>

        <!-- ================= PARTY UI ================= -->
        <screen location="component://webroot/screen/webroot/apps.xml">
            <!--
                Ye Moqui ka main Applications menu screen hai
                /apps URL se access hota hai
            -->
            <subscreens-item
                    name="party"
                    menu-title="Party"
                    menu-index="30"
                    location="component://party/screen/PartyScreen.xml"/>
            <!--
                Party UI screen ko Apps menu me add kiya gaya hai
                name="party" → URL path: /apps/party
                menu-title → UI menu me dikhne wala naam
                menu-index → menu ordering
                location → actual screen XML file
            -->
        </screen>

    </screen-facade>

</moqui-conf>
